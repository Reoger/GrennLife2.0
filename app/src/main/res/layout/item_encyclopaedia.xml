<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5px"
        android:layout_marginRight="5px"
        android:background="@drawable/shape_dark">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/encyclopaedia_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingLeft="5dp"
                android:src="@drawable/ollie_north" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/encyclopaedia_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:text="title"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/encyclopaedia_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:lines="2"
                android:text="content  content  content  content  content"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>