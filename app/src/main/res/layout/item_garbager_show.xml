<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user3"
            android:padding="5dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/item_garbager_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="我是李某"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tel__"
            android:padding="5dp"
            android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/item_garbager_user_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_gravity="center"
        android:text="联系方式："
        />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/lacat"
        android:padding="5dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/item_garbager_user_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="位置"
        android:layout_gravity="center"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/laca"
            android:padding="5dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:text="距离你  100m"
            android:id="@+id/item_garbager_distance"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人简介 :"
        android:padding="5dp"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/item_garbager_introduce"
        android:text="這裏可以添加個人簡介嘛"
        android:lines="2"/>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="已認證"
        android:textColor="#f0ec0101"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:paddingTop="18dp"
        android:background="@color/background_main"/>
</LinearLayout>

</LinearLayout>
