<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#22e0e0e0">

    <include layout="@layout/user_title"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#22e0e0e0">
    </View>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#552f4f4f">
    </View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white">
        <com.reoger.grennlife.utils.viewTools.CircularImage
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/picture"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textSize="17sp"
                    android:id="@+id/user_monitoring_username"
                    android:textColor="@color/black"
                    android:padding="5dp"/>
                <TextView
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="简介:就是一个特点：帅@！"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey">
    </View>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="12dp"
        android:background="@color/grey">
    </View>
    

    <LinearLayout
        android:id="@+id/user_monitoring_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_list_height"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_width="@dimen/user_list_picture"
            android:layout_height="@dimen/user_list_picture"
            android:src="@mipmap/information"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/user_picture_marginLeft"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detailed_information"
            android:textSize="@dimen/user__list_text"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/user_text_marginLeft"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/come__into"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/user_into_marginLeft"/>



    </LinearLayout>
    <View
        android:layout_width="330dp"
        android:layout_height="0.3dp"
        android:layout_gravity="right"
        android:background="#66e0e0e0">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_list_height"
        android:id="@+id/use_information_about"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_width="@dimen/relater__picture"
            android:layout_height="@dimen/user_list_picture"
            android:src="@mipmap/related_tome"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/user_picture_ml"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/related_to_me"
            android:textSize="@dimen/user__list_text"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="27dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/come__into"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/user_into_marginLeft"/>/>

    </LinearLayout>
    <View
        android:layout_width="330dp"
        android:layout_height="0.3dp"
        android:layout_gravity="right"
        android:background="#66e0e0e0">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_list_height"
        android:orientation="horizontal"
        android:id="@+id/user_monitoring_resources"
        android:background="@color/white">
        <ImageView
            android:layout_width="@dimen/user_list_picture"
            android:layout_height="wrap_content"
            android:src="@mipmap/resources"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/user_picture_marginLeft"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_resources"
            android:textSize="@dimen/user__list_text"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/user_text_marginLeft"/>/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/come__into"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/user_into_marginLeft"/>/>

    </LinearLayout>
    <View
        android:layout_width="330dp"
        android:layout_height="0.3dp"
        android:layout_gravity="right"
        android:background="#66e0e0e0">
    </View>

    <LinearLayout
        android:id="@+id/user_monitoring_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_list_height"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_width="@dimen/relater__picture"
            android:layout_height="@dimen/user_list_picture"
            android:src="@mipmap/history"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/user_picture_ml"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history"
            android:textSize="@dimen/user__list_text"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="27dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/come__into"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/user_into_marginLeft"/>/>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey">
    </View>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="12dp"
        android:background="@color/grey">
    </View>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_list_height"
        android:orientation="horizontal"
        android:id="@+id/user_information_feedback"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/feedback"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/user_picture_ml"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feedback"
            android:textSize="@dimen/user__list_text"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/user_text_ml"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/come__into"
            android:layout_gravity="center"
            android:layout_marginLeft="238dp"/>

    </LinearLayout>
    <View
        android:layout_width="330dp"
        android:layout_height="0.3dp"
        android:layout_gravity="right"
        android:background="#66e0e0e0">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_list_height"
        android:orientation="horizontal"
        android:id="@+id/user_information_app"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/about__app"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_APP"
            android:textSize="@dimen/user__list_text"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/user_text_marginLeft"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/come__into"
            android:layout_gravity="center"
            android:layout_marginLeft="209dp"/>

    </LinearLayout>
    <View
        android:layout_width="320dp"
        android:layout_height="0.3dp"
        android:layout_gravity="right"
        android:background="#66e0e0e0">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_list_height"
        android:orientation="horizontal"
        android:id="@+id/user_information_setting"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tools"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/user_picture_ml"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_up"
            android:textSize="@dimen/user__list_text"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/user_text_ml"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/come__into"
            android:layout_gravity="center"
            android:layout_marginLeft="237dp"/>/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey">
    </View>

</LinearLayout>
